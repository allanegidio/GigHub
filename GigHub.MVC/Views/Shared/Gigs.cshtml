@model GigHub.MVC.ViewModels.GigsViewModel

@{
    ViewBag.Title = "Home Page";
}

<h1>@Model.Heading</h1>

@using (Html.BeginForm("Search", "Gigs"))
{
    <div class="form-group">
        <div id="searchGigs" class="input-group">
            @Html.TextBoxFor(g => g.SearchTerm, new { @class = "form-control", placeholder = "Search by Artist, Genre or Location..." })
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-search"></i>
            </span>
        </div>
    </div>
}

<ul class="gigs voffset4">
    @foreach (var gig in Model.UpcomingGigs)
    {
        <li>
            <div class="date">
                <div class="month">
                    @gig.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @gig.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="artist">
                    <a href="@Url.Action("Details", "Gigs", new { id = gig.Id })">
                        @gig.Artist.Name
                    </a>
                    
                    @if (gig.IsCanceled)
                    {
                        <span class="label label-warning">Canceled</span>
                    }

                    @if (Model.ShowActions)
                    {
                        <button data-artist-id="@gig.ArtistId" class="btn btn-link btn-sm js-toggle-follow">Follow</button>
                    }
                </span>
                <span class="genre">
                    @gig.Genre.Name
                </span>
                <span class="going">
                    @if (Model.ShowActions && !gig.IsCanceled)
                    {
                        <button 
                            data-gig-id="@gig.Id"
                            class="btn @(Model.Attendances.Contains(gig.Id) ? "btn-info" : "btn-default")
                                btn-sm pull-right js-toggle-attendance">
                            Going?
                        </button>
                    }
                </span>
            </div>
        </li>
    }
</ul>

@section scripts {
    <script>
        $(document).ready(function () {
            $('.js-toggle-attendance').click(function (e) {
                var buttonGigId = $(e.target);
                if (buttonGigId.hasClass("btn-default")) {
                    $.post("/api/attendances", { gigId: buttonGigId.attr("data-gig-id") })
                        .done(function () {
                            buttonGigId
                                .removeClass("btn-default")
                                .addClass("btn-info")
                                .text("Going")
                        })
                        .fail(function () {
                            alert(`Something Failed!!!`);
                        });
                } else {
                    $.ajax({
                        url: '/api/attendances/' + buttonGigId.attr("data-gig-id"),
                        method: 'DELETE'
                    })
                        .done(function () {
                            buttonGigId
                                .removeClass("btn-info")
                                .addClass("btn-default")
                                .text("Going?");

                        })
                        .fail(function () {
                            alert(`Something Failed!!!`);
                        });
                }
            });

            $('.js-toggle-follow').click(function (e) {
                var buttonArtistId = $(e.target);
                $.post("api/followings", { followeeId: buttonArtistId.attr("data-artist-id") })
                    .done(function () {
                        buttonArtistId.text("Following");
                    })
                    .fail(function () {
                        alert(`Something Failed!!!`);
                    });
            });
        });
    </script>
}